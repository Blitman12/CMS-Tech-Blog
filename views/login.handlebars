<div class="d-flex align-items-center flex-column">
    <h3>Login</h3>
<form class="login-form">
    <div>
        <label for="email-login">email:</label>
        <input type="text" id="email-login" class="form-control"/>
    </div>
    <div>
        <label for="password-login">password:</label>
        <input type="password" id="password-login" class="form-control"/>
    </div>
    <div>
        <button type="submit" class="btn btn-outline-primary mt-2">login</button>
    </div>
</form>
<br>
<h3>Register</h3>
<form class="signup-form">
    <div>
        <label for="username-signup">username:</label>
        <input type="text" id="username-signup" class="form-control"/>
    </div>
    <div>
        <label for="email-signup">email:</label>
        <input type="text" id="email-signup" class="form-control"/>
    </div>
    <div>
        <label for="password-signup">password:</label>
        <input type="password" id="password-signup" class="form-control"/>
    </div>
    <div>
        <button type="submit" class="btn btn-outline-primary mt-2">signup</button>
    </div>
</form>
</div>
<script src="/javascript/login.js"></script>